<div class="container">

  <div class="row">
    <div class="col-4">
      <%=image_tag @account.image.url, class: "img img-circle img-fluid" %>
    </div>
    <div class="col-8 text-start">
      <div class="row">
    <div class="col-6">
      <%= link_to 'Edit Profile', edit_account_registration_path, class: "btn btn-secondary float-end" if can_edit_profile?(@account.id) %>
      <h1><%= @account.full_name %></h1>
    </div>
      </div>
      <div class="row">
      <div class="profile-stats"><%= @account.posts.count %> posts</div>
      <div class="profile-stats"><%= @account.total_followers %> followers</div>
      <div class="profile-stats"><%= @account.total_following %> followings</div>
      </div>
      <p><%= @account.full_name %></p>
      <%= simple_format @account.description %>
      <p><%= link_to @account.website if @account.website.present? %></p>
    </div>
  </div>
  <div class="row profile-posts">
    <% @posts.each do |post| %>
      <div class="col-4">
        <div class="insta-post">
          <%= image_tag post.image.url, class: "img img-fluid" %>
        </div>
      </div>
    <% end %>
  </div>
</div>


